<div class="container-fluid mt-4">
  <div class="row">
      <section class="col-12 col-lg-10 mx-4 p-4">
          <section class="content">
              <ol class="post-list">
                {{#each posts as |post|}}
                  <li>
                    <article class="post">
                      <div class="title">
                        <a href="{{post.post_url}}" target="_blank">{{post.title}}</a>
                        <span>({{post.post_url}})</span>
                      </div>
                      <div class="meta">
                        {{post.vote_count}} point(s) by {{post.user.username}}
                        |
                        <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
                      </div>
                    </article>
                  </li>
                {{/each}}
              </ol>
          </section>
      </section>
  </div>
</div>